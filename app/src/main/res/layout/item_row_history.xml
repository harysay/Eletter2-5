<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_row"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/text_button_detail_mail"
    android:paddingRight="@dimen/text_button_detail_mail">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <View
            android:id="@+id/start_bar"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="@color/colorAccent"/>
        <ImageView
            android:id="@+id/point_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_radio_blue_24dp"/>
        <View
            android:id="@+id/end_bar"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout

        android:paddingTop="@dimen/text_button_detail_mail"
        android:paddingBottom="@dimen/text_button_detail_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_marginLeft="@dimen/margin_button_detail_mail">
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/msg_text_secondary"
            android:text="10/01/2018"/>
        <TextView
            android:id="@+id/waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/msg_text_primary"
            android:text="10:00 AM"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_button_detail_mail"
        android:paddingTop="@dimen/text_button_detail_mail"
        android:paddingBottom="@dimen/text_button_detail_mail"
        android:gravity="top"
        android:orientation="vertical">
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/msg_text_secondary"
            android:textColor="@color/timestamp"
            android:text="ajuan"/>
        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_pengirim_histori"
            android:text="Triana"/>
        <TextView
            android:id="@+id/pesan"
            android:layout_marginTop="@dimen/appbar_padding_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_pengirim_histori"
            android:text="Pesan"
            android:textStyle="italic"/>

    </LinearLayout>
</LinearLayout>
